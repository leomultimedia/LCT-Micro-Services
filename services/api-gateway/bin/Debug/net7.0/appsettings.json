{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Ocelot": "Information"
    }
  },
  "AllowedHosts": "*",
  "ServiceUrls": {
    "ProductService": "http://product-service",
    "OrderService": "http://order-service",
    "PaymentService": "http://payment-service",
    "NotificationService": "http://notification-service",
    "UserService": "http://user-service",
    "InventoryService": "http://inventory-service",
    "FrontendService": "http://frontend-service"
  },
  "AzureAdB2C": {
    "Instance": "https://your-tenant.b2clogin.com",
    "ClientId": "your-client-id",
    "Domain": "your-tenant.onmicrosoft.com",
    "SignUpSignInPolicyId": "B2C_1_SignUpSignIn",
    "Scopes": {
      "Product": {
        "Read": "product.read",
        "Write": "product.write"
      },
      "Order": {
        "Read": "order.read",
        "Write": "order.write"
      },
      "Payment": {
        "Read": "payment.read",
        "Write": "payment.write"
      },
      "Notification": {
        "Read": "notification.read",
        "Write": "notification.write"
      },
      "User": {
        "Read": "user.read",
        "Write": "user.write"
      },
      "Inventory": {
        "Read": "inventory.read",
        "Write": "inventory.write"
      }
    }
  },
  "GlobalConfiguration": {
    "BaseUrl": "http://api-gateway:80"
  }
} 