<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lear Cyber Tech</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="https://www.linkedin.com/company/leartech/" target="_blank" rel="noopener noreferrer">
                    <img src="~/images/lear-cyber-tech-logo.png" alt="Lear Cyber Tech Logo" height="40" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; @DateTime.Now.Year - Lear Cyber Tech. All rights reserved.</p>
                    <a href="https://www.linkedin.com/company/leartech/" target="_blank" rel="noopener noreferrer">
                        <i class="fab fa-linkedin" style="font-size: 1.5rem; vertical-align: middle; margin-right: 6px; color: #0077b5;"></i>
                        Connect with us on LinkedIn
                    </a>
                </div>
                <div class="col-md-6 text-end">
                    <img src="~/images/nist-logo.png" alt="NIST" height="30" class="me-2" />
                    <img src="~/images/hipaa-logo.png" alt="HIPAA" height="30" class="me-2" />
                    <img src="~/images/gdpr-logo.png" alt="GDPR" height="30" class="me-2" />
                    <img src="~/images/pci-logo.png" alt="PCI DSS" height="30" />
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 